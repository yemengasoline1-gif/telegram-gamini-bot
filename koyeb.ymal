name: telegram-bot
services:
  - name: app
    type: web
    build:
      builder: buildpack
      build_command: pip install -r requirements.txt
    ports:
      - port: 8000
        http_path: /
    routes:
      - path: /
        port: 8000
    env:
      - name: TELEGRAM_TOKEN
        secret: true
      - name: GEMINI_API_KEY
        secret: true
      - name: KOYEB
        value: "true"
    scaling:
      min: 1
      max: 1
    instances:
      type: nano
